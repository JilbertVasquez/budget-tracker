{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build: debug",
			"dependsOn": [
				"build"
			],
			"dockerBuild": {
				"tag": "budgettracker:dev",
				"target": "base",
				"dockerfile": "${workspaceFolder}/budget-tracker-client/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/budget-tracker-client/budget-tracker-client.csproj"
			}
		},
		{
			"type": "docker-build",
			"label": "docker-build: release",
			"dependsOn": [
				"build"
			],
			"dockerBuild": {
				"tag": "budgettracker:latest",
				"dockerfile": "${workspaceFolder}/budget-tracker-client/Dockerfile",
				"context": "${workspaceFolder}",
				"platform": {
					"os": "windows",
					"architecture": "amd64"
				},
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/budget-tracker-client/budget-tracker-client.csproj"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build: debug"
			],
			"dockerRun": {
				"os": "Windows"
			},
			"netCore": {
				"appProject": "${workspaceFolder}/budget-tracker-client/budget-tracker-client.csproj",
				"enableDebugging": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build: release"
			],
			"dockerRun": {
				"os": "Windows"
			},
			"netCore": {
				"appProject": "${workspaceFolder}/budget-tracker-client/budget-tracker-client.csproj"
			}
		}
	]
}